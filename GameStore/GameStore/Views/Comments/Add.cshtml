@model AddCommentToArticleViewModel


@{
    ViewData["Title"] = "Add";
}


<!DOCTYPE html>

<html lang="en">
<body>
    <h1 class="text-center mt-2">Leave a comment!</h1>
    <form class="mx-auto w-50" method="post">
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Username" class="h4 mb-2"></label>
            </div>
            <input asp-for="Username" type="text" class="form-control" placeholder="SomeUser123" />
            <span asp-validation-for="Username" class="small text-danger"></span>
        </div>

        <div class="d-flex justify-content-start">
            <label asp-for="Content" class="h4 mb-2"></label>
        </div>
        <input asp-for="Content" type="text" class="form-control" placeholder="My comment is about.." />
        <span asp-validation-for="Content" class="small text-danger"></span>


        <div class="form-group row-sm-2">


            <div class="rate" col-md-2>
                <input type="radio" id="star5" name="rating" value="5" />
                <label for="star5" title="text">5 stars</label>
                <input type="radio" id="star4" name="rating" value="4" />
                <label for="star4" title="text">4 stars</label>
                <input type="radio" id="star3" name="rating" value="3" />
                <label for="star3" title="text">3 stars</label>
                <input type="radio" id="star2" name="rating" value="2" />
                <label for="star2" title="text">2 stars</label>
                <input type="radio" id="star1" name="rating" value="1" />
                <label for="star1" title="text">1 star</label>
            </div>

        </div>
        <span asp-validation-for="Rating" class="small text-danger"></span>

        <div class="d-flex justify-content-center">
            <button class="nk-btn nk-btn-rounded nk-btn-color-main-1">Post Comment</button>
        </div>

    </form>
   
   

</body>
</html>
