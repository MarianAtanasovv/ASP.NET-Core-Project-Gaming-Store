@model AllArticlesQueryModel

    <div style="margin-left: 35%; margin-right: 25%; margin-bottom: 5%;width: 50%">
        <form method="get">
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="SearchTerm"></label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Video games might develop young people's reflexes...">
                </div>
                <div class="form-group  col-md-4">
                    <div class="form-group">
                        <label asp-for="Sorting"></label>
                        <select asp-for="Sorting" class="form-control">
                            <option value="0" selected>Title</option>
                            <option value="1">Year</option>
                        </select>
                    </div>
                </div>
            </div>
        </form>
    </div>