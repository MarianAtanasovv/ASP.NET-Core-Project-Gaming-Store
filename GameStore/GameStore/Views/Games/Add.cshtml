@model AddGameFormModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>


<html lang="en">
<body>

    <h1 class="text-center mt-2">Add a game!</h1>
    <form class="mx-auto w-50" method="post">
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Title" class="h4 mb-2"></label>
            </div>
            <input asp-for="Title" type="text" class="form-control" placeholder="Metin2" />
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GenreId" class="h4 mb-2"></label>
            <select asp-for="GenreId" class="form-control">
                @foreach (var genre in Model.Genres)
                {
    <option value="@genre.Id">@genre.Name</option>}
            </select>
        </div>
        <div class="form-group">
            <label asp-for="PlatformId" class="h4 mb-2"></label>
            <select asp-for="PlatformId" class="form-control">
                @foreach (var platform in Model.Platforms)
                {
    <option value="@platform.Id">@platform.Name</option>
    }
            </select>
        </div>
        <span asp-validation-for="GenreId" class="small text-danger"></span>
        <div class="d-flex justify-content-start">
            <label asp-for="Description" class="h4 mb-2"></label>
        </div>
        <input asp-for="Description" type="text" class="form-control" placeholder="This game is about..." />
        <span asp-validation-for="Description" class="small text-danger"></span>
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Requirements" class="h4 mb-2"></label>
            </div>
            <input asp-for="Requirements" type="text" class="form-control" placeholder="CPU: Intel Core 2 Quad CPU Q6600..." />
        </div>
        <span asp-validation-for="Requirements" class="small text-danger"></span>
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Price" class="h4 mb-2"></label>
            </div>
            <input asp-for="Price" type="text" class="form-control" placeholder="80$" />
        </div>
        <span asp-validation-for="Price" class="small text-danger"></span>
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Guide" class="h4 mb-2"></label>
            </div>
            <input asp-for="Guide" type="text" class="form-control" placeholder="Starting tips, walkthrough" />
        </div>
        <span asp-validation-for="Guide" class="small text-danger"></span>
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="ImageUrl" class="h4 mb-2"></label>
            </div>
            <input asp-for="ImageUrl" type="text" class="form-control" />
        </div>
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="TrailerUrl" class="h4 mb-2"></label>
            </div>
            <input asp-for="TrailerUrl" type="text" class="form-control" />
        </div>
        <span asp-validation-for="TrailerUrl" class="small text-danger"></span>



        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-block btn-primary text-white mb-3" value="Add">Add</button>
        </div>
    </form>


</body>
</html>
