@model AllArticlesQueryModel


@{ ViewData["Title"] = "Articles";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<!DOCTYPE html>


<html lang="en">
<body>

    <partial name="_SearchAndSortArticlePartial" model="@Model"></partial>

    <div class="container">
        <div class="row vertical-gap">
            <div class="col-lg-8">
                <div class="nk-blog-grid">
                    <div class="row">
                        @foreach (var article in Model.Articles)
                        {
            <div class="col-md-6">
                <div class="nk-blog-post">
                    <a href="blog-article.html" class="nk-post-img">
                        <img src="@article.ImageUrl" alt="Smell magic in the air. Or maybe barbecue">
                        <span class="nk-post-comments-count">4</span>
                    </a>
                    <div class="nk-gap"></div>
                    <h2 class="nk-post-title h4"><a href="blog-article.html">@article.Title</a></h2>
                    <div class="nk-post-by">
                        <img src="@article.ImageUrl" alt="Hitman" class="rounded-circle" width="35">by <a href="#">Hitman</a>
                        <div>
                            @article.CreatedOn
                        </div>
                    </div>
                    <div class="nk-gap"></div>
                    <div class="nk-post-text">
                        <p>@article.ShortDescription...</p>
                    </div>
                    <div class="nk-gap"></div>
                    <a href="/Articles/Details?Id=@article.Id" class="nk-btn nk-btn-rounded nk-btn-color-dark-3 nk-btn-hover-color-main-1">Read More</a>
                </div>
            </div>
            }
                    </div>
                </div>
            </div>
        </div>
    </div>


    @{ var previousPage = Model.CurrentPage - 1;
        if (previousPage < 1)
        {
            previousPage = 1;
        }

        var maxPage = Math.Ceiling((double)Model.TotalArticles / AllArticlesQueryModel.ArticlesPerPage); }

    <div class="row mb-5">
        <div class="col-md-6">
            <a class="nk-btn nk-btn-rounded nk-btn-color-main-1 nk-btn-hover-color-main-1 @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
               asp-controller="Articles"
               asp-action="All"
               asp-route-currentPage="@previousPage"
               asp-route-brand="@Model.Title"
               asp-route-searchTerm="@Model.SearchTerm"
               asp-route-sorting="@((int)Model.Sorting)"><<</a>
        </div>

        @{ var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                                      !Model.Articles.Any(); }

        <div class="col-md-6">
            <a class="nk-btn nk-btn-rounded nk-btn-color-main-1 nk-btn-hover-color-main-1 float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
               asp-controller="Articles"
               asp-action="All"
               asp-route-currentPage="@(Model.CurrentPage + 1)"
               asp-route-brand="@Model.Title"
               asp-route-searchTerm="@Model.SearchTerm"
               asp-route-sorting="@((int)Model.Sorting)">>></a>
        </div>
    </div>

    <img class="nk-page-background-top" src="~/assets/images/bg-top.png" alt="">
    <img class="nk-page-background-bottom" src="~/assets/images/bg-bottom.png" alt="">


</body>
</html>
