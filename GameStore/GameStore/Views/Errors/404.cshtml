@{
    Layout = null;
}

<div class="super-man">
    <img src="http://pngimg.com/uploads/superman/superman_PNG59.png">
</div>
<div class="error">404!</div>
<p>The page you're looking for was not found</p>
<button>go back!</button>


<style>
    body {
        user-select: none;
        text-transform: capitalize;
        font-family: "Merriweather",serif;
        padding: 0;
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        overflow: hidden;
        flex-direction: column;
        background-image: linear-gradient(to right top, #0f1011, #031120, #00112e, #000e39, #120541);
    }

    img {
        width: 150px;
        transform: rotate(30deg);
        position: absolute;
        top: 60%;
        animation: animation 6s infinite linear
    }

    .star {
        height: 3px;
        width: 3px;
        position: absolute;
        right: 0;
        z-index: -1;
        animation: animationStar 8s infinite ease;
    }

    @@keyframes animation {
        0% {
            left: -150px;
        }

        100% {
            left: 90%;
        }
    }

    @@keyframes animationStar {
        0% {
            box-shadow: 0px 0px 5px rgba(255,255,255,.7)
        }

        20% {
            box-shadow: 0px 0px 15px rgba(255,255,255,.4)
        }

        40% {
            box-shadow: 0px 0px 5px rgba(255,255,255,.7)
        }

        60% {
            box-shadow: 0px 0px 15px rgba(255,255,255,.4)
        }

        80% {
            box-shadow: 0px 0px 5px rgba(255,255,255,.7)
        }

        100% {
            box-shadow: 0px 0px 15px rgba(255,255,255,.4)
        }
    }

    .error {
        margin-top: 2.5rem;
        font-size: 150px;
        color: white;
    }

    p {
        margin-top: 1.5rem;
        color: white;
        font-size: 20px;
    }

    button {
        border-radius: 7px;
        outline: none;
        background-color: #880000;
        color: white;
        padding: 8px 12px;
        letter-spacing: 1.3px;
        font-size: 18px;
        cursor: pointer;
        border: none;
        transition: 250ms all;
        user-select: none;
    }

        button:hover {
            background-color: #660000;
        }

        button:active {
            transform: translate(-5px,5px);
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var body = document.body;
        setInterval(creatMulStar, 50)
        function creatMulStar() {
            var color = ["#ff6600", "#ff0000", "#880000", "#ff9933", "#ff3300", "#ff3366"]
            var pos = Math.random() * screen.height;
            var star = document.createElement("div");
            star.classList.add("star")
            body.appendChild(star);
            var top = Math.floor(Math.random() * screen.height);
            star.style.top = top + "px";
            star.style.background = color[Math.floor(Math.random() * 5)]

            setInterval(movestar, 10)

            function movestar() {
                if (pos >= screen.width)
                    star.remove();
                pos += 3;
                star.style.right = pos + "px";

            }
        }
    })

</script>