@model EditGameFormModel

@{ ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<!DOCTYPE html>


<html lang="en">
<body>
    <h1 class="text-center mt-2">Edit game!</h1>
    <form class="mx-auto w-50" method="post">
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Title" class="h4 mb-2"></label>
            </div>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>

        <div class="d-flex justify-content-start">
            <label asp-for="Description" class="h4 mb-2"></label>
        </div>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="small text-danger"></span>
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Requirements" class="h4 mb-2"></label>
            </div>
            <input asp-for="Requirements" type="text" class="form-control" />
            <span asp-validation-for="Requirements" class="small text-danger"></span>
            <div class="form-group">
                <div class="d-flex justify-content-start">
                    <label asp-for="Price" class="h4 mb-2"></label>
                </div>
                <input asp-for="Price" type="text" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="small text-danger"></span>
            <div class="form-group">
                <div class="d-flex justify-content-start">
                    <label asp-for="Guide" class="h4 mb-2"></label>
                </div>
                <input asp-for="Guide" type="text" class="form-control" />
            </div>
            <span asp-validation-for="Guide" class="small text-danger"></span>
            <div class="form-group">
                <div class="d-flex justify-content-start">
                    <label asp-for="ImageUrl" class="h4 mb-2"></label>
                </div>
                <input asp-for="ImageUrl" type="text" class="form-control" />
            </div>
            <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            <div class="form-group">
                <div class="d-flex justify-content-start">
                    <label asp-for="TrailerUrl" class="h4 mb-2"></label>
                </div>
                <input asp-for="TrailerUrl" type="text" class="form-control" />
            </div>
            <span asp-validation-for="TrailerUrl" class="small text-danger"></span>



            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-block btn-primary text-white mb-3" value="Add">Edit</button>
            </div>
        </div>
    </form>
</body>
</html>
