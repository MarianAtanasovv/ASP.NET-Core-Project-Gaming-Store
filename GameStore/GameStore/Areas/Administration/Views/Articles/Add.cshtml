@model AddArticleFormModel

@{ ViewData["Title"] = "Add";
  }

<!DOCTYPE html>
<html lang="en">

<body>
    <h1 class="text-center mt-2">Add an article!</h1>
    <form class="mx-auto w-50" method="post">
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="Title" class="h4 mb-2"></label>
            </div>
            <input asp-for="Title" type="text" class="form-control" placeholder="Parents of online gamers need to think twice before..." />
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>

        <div class="d-flex justify-content-start">
            <label asp-for="Content" class="h4 mb-2"></label>
        </div>
        <textarea style="height:120px;" asp-for="Content" type="text" class="form-control" placeholder="This article is about..."> </textarea>

        <span asp-validation-for="Content" class="small text-danger"></span>


        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="ImageUrl" class="h4 mb-2"></label>
            </div>
            <input asp-for="ImageUrl" type="text" class="form-control" />
        </div>
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
        <div class="form-group">
            <div class="d-flex justify-content-start">
                <label asp-for="TrailerUrl" class="h4 mb-2"></label>
            </div>
            <input asp-for="TrailerUrl" type="text" class="form-control" />
        </div>
        <span asp-validation-for="TrailerUrl" class="small text-danger"></span>



        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-block btn-primary text-white mb-3" value="Add">Add</button>
        </div>
    </form>

</body>
</html>
